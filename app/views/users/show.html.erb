<main>
  <section>
      <div class="user-header">
        <div class="img_div">
          <img src="<%= @user.photo %>">
        </div>
        <div class="info_div">
          <h2>
            <%= @user.name %>
          </h2>
          <span>
            Number of posts: <%= @user.posts_counter %>
          </span>
        </div>
      </div>

      <div class="user-bio">
        <h3>
          Bio
        </h3>
        <p>
          <%= @user.bio %>
        </p>
      </div>

      <% @user.last_three_post.each do |post| %>
        <div class="user-post-preview">
          <h3>Post <%= post.id %></h3>
          <p><%= post.text %></p>
          <p class="post-data">
            <span>Comments: <%= post.comments_counter %></span>
            <span>Likes: <%= post.likes_counter %></span>
          </p>
        </div>
      <% end %>
      <%= link_to user_posts_path(@user) do %>
        <div class="div-see-all">
          <button type="button" class="btn-see-all">See all posts</button>
        </div>
      <% end %>

  </section>
</main>